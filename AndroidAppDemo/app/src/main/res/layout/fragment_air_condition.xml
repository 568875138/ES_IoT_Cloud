<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dell.iotplatformdemo.Fragement.AirConditionFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/air_condition_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="0.4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/sub_white">
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.8">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="150dp"
                     android:layout_centerInParent="true">
                     <ImageView
                         android:id="@+id/air_condition_tem1"
                         android:layout_width="80dp"
                         android:layout_height="match_parent" />
                     <ImageView
                         android:id="@+id/air_condition_tem2"
                         android:layout_width="80dp"
                         android:layout_height="match_parent" />
                     <ImageView
                         android:id="@+id/air_condition_du"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/ac_du"/>
                     <ImageView
                         android:id="@+id/air_condition_mode_img"
                         android:layout_width="60dp"
                         android:layout_marginBottom="0dp"
                         android:layout_height="60dp"
                        android:layout_gravity="bottom"
                         android:src="@drawable/cold"
                       />
                 </LinearLayout>
             </RelativeLayout>
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="0dp">
                   <ImageView
                       android:id="@+id/wind_speed_img"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:src="@drawable/air_wind1"
                       android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/wind_UD_img"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/wind_vertical_pressed"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/wind_LR_img"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/wind_horizontal_pressed"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_weight="0.6"
        android:showDividers="middle"
        android:dividerPadding="1px"
        android:divider="@color/accent_gray"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:showDividers="middle"
            android:dividerPadding="1px"
            android:divider="@color/accent_gray"
            android:layout_weight="1">
            <Button
                android:id="@+id/air_condition_turn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:textColor="@color/accent_red"
                android:textAlignment="center"
                android:text="开"/>
            <Button
                android:id="@+id/air_condition_mode"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:text="模式"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:showDividers="middle"
            android:dividerPadding="1px"
            android:divider="@color/accent_gray"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/wind_speed"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/accent_black"
                android:textAlignment="center"
                android:text="风速"/>
            <Button
                android:id="@+id/air_UD_scavenging"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:textColor="@color/accent_black"
                android:text="上下扫风"
                android:textAlignment="center"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/air_RL_scavenging"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:text="左右扫风"
                android:textColor="@color/accent_black"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_weight="1">
          <ImageButton
              android:id="@+id/temp_decrease"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:layout_weight="1"
              android:src="@drawable/ic_temp_dece"/>
            <TextView
                android:text="温度"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/temp_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_temp_add" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:showDividers="middle|beginning|end"
            android:divider="@drawable/divider_simple"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button

                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/accent_black"
                android:textAlignment="center"
                android:text="定时"/>
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="0dp"
                android:textColor="@color/accent_black"
                android:text="睡眠"
                android:textAlignment="center"
                android:layout_height="match_parent" />
            <Button

                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:text="更多功能"
                android:textColor="@color/accent_black"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</FrameLayout>
